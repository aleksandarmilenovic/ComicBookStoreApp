<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorYellow"
                android:layout_marginTop="24dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/comic_details_name"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_margin="24dp"
                android:layout_below="@id/comic_details_name"
                android:id="@+id/comic_details_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="GOIDNA:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="24dp"
                android:layout_below="@id/comic_details_cover"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comic_details_godina"
                android:layout_margin="24dp"
                android:layout_below="@id/comic_details_cover"
                android:textColor="@color/colorYellow"
                />

            <TextView
                android:textColor="@color/colorAccent"
                android:text="OPIS:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="24dp"
                android:layout_below="@id/comic_details_godina"

                />

            <TextView
                android:textColor="@color/colorYellow"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comic_details_opis"
                android:layout_margin="24dp"
                android:layout_below="@id/comic_details_godina"

                />
        </RelativeLayout>
    </ScrollView>




</LinearLayout>